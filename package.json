{
  "name": "@becode/oto",
  "version": "1.1.3",
  "description": "Oto, the man in the middle - OAuth2 middleware lambda",
  "private": true,
  "scripts": {
    "lint": "npx eslint --fix --cache src",
    "dev": "npx serverless offline --port 6060 start",
    "build": "npx babel src --out-dir bin",
    "work": "npx babel src -w --out-dir bin",
    "deploy:dev": "npx sls deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becodeorg/oto.git"
  },
  "author": "leny <leny@becode.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/becodeorg/oto/issues"
  },
  "homepage": "https://github.com/becodeorg/oto#readme",
  "lint-staged": {
    "*.yml": [
      "npx prettier --write",
      "git add"
    ],
    "*.json": [
      "npx prettier --write",
      "git add"
    ],
    "*.js": [
      "npx eslint --fix --cache",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@becode/eslint-config": "^0.9.1",
    "@sentry/cli": "^1.52.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-unicorn": "^18.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "serverless": "^1.68.0",
    "serverless-domain-manager": "^3.3.2",
    "serverless-offline": "^6.1.4"
  },
  "dependencies": {
    "@sentry/node": "^5.15.5",
    "got": "^11.0.2",
    "koa": "^2.11.0",
    "koa2-cors": "^2.0.6",
    "parseurl": "^1.3.3",
    "qs": "^6.9.3",
    "serverless-http": "^2.3.2"
  }
}
