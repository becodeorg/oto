{
  "name": "@becode/oto",
  "version": "1.0.1",
  "description": "Oto, the man in the middle - OAuth2 middleware lambda",
  "private": true,
  "scripts": {
    "lint": "npx eslint --fix --cache src",
    "dev": "npx serverless offline --port 6060 start",
    "build": "npx babel src --out-dir bin",
    "work": "npx babel src -w --out-dir bin",
    "deploy:dev": "npx sls deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becodeorg/oto.git"
  },
  "author": "leny <leny@becode.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/becodeorg/oto/issues"
  },
  "homepage": "https://github.com/becodeorg/oto#readme",
  "lint-staged": {
    "*.yml": [
      "npx prettier --write",
      "git add"
    ],
    "*.json": [
      "npx prettier --write",
      "git add"
    ],
    "*.js": [
      "npx eslint --fix --cache",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.4",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.7.6",
    "@becode/eslint-config": "^0.8.2",
    "@sentry/cli": "^1.49.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-unicorn": "^13.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "serverless": "^1.59.3",
    "serverless-domain-manager": "^3.3.0",
    "serverless-offline": "^5.12.0"
  },
  "dependencies": {
    "@sentry/node": "^5.10.1",
    "got": "^10.0.3",
    "koa": "^2.11.0",
    "koa2-cors": "^2.0.6",
    "parseurl": "^1.3.3",
    "qs": "^6.9.1",
    "serverless-http": "^2.3.0"
  }
}
