{
  "name": "@becode/oto",
  "version": "1.2.2",
  "description": "Oto, the man in the middle - OAuth2 middleware lambda",
  "private": true,
  "scripts": {
    "lint": "npx eslint --fix --cache src",
    "dev": "npx serverless offline --port 6060 start",
    "build": "npx babel src --out-dir bin",
    "work": "npx babel src -w --out-dir bin",
    "push:release": "sh ./scripts/push-release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becodeorg/oto.git"
  },
  "author": "leny <leny@becode.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/becodeorg/oto/issues"
  },
  "homepage": "https://github.com/becodeorg/oto#readme",
  "lint-staged": {
    "*.yml": [
      "npx prettier --write"
    ],
    "*.json": [
      "npx prettier --write"
    ],
    "*.js": [
      "npx eslint --fix --cache"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@becode/eslint-config": "^0.10.0",
    "@sentry/cli": "^1.56.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-unicorn": "^19.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "serverless": "^1.82.0",
    "serverless-domain-manager": "^3.3.2",
    "serverless-offline": "^6.7.0"
  },
  "dependencies": {
    "@sentry/node": "^5.24.2",
    "got": "^11.6.0",
    "koa": "^2.13.0",
    "koa2-cors": "^2.0.6",
    "parseurl": "^1.3.3",
    "qs": "^6.9.4",
    "serverless-http": "^2.5.0"
  }
}
